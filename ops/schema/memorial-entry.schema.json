{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "memorial-entry.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["name", "date", "location", "notes", "source_count"],
    "properties": {
      "name": { "type": "string", "minLength": 1, "maxLength": 120 },
      "date": {
        "anyOf": [
          { "type": "null" },
          { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }
        ]
      },
      "location": {
        "anyOf": [
          { "type": "null" },
          { "type": "string", "maxLength": 120 }
        ]
      },
      "notes": {
        "anyOf": [
          { "type": "null" },
          { "type": "string", "maxLength": 240 }
        ]
      },
      "source_count": { "type": "integer", "minimum": 1, "maximum": 1000 }
    }
  }
}
